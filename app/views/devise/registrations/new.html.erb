<h1 class='form-header-text'>ユーザー新規登録</h1>
<%= form_with model: @user, url: user_registration_path, class: 'form-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
    <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
        </div>
        <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email", class:"input-default" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード（6文字以上）</label>
        </div>
        <%= f.password_field :password, id:"user_password", autocomplete: "new-password", class:"input-default" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード再入力</label>
        </div>
        <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password", class:"input-default" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">ユーザー名</label>
        </div>
        <%= f.text_field :name, id:"user_name", class:"input-default" %>
      </div>

      <div class="submit">
        <%= f.submit "新規登録", class:"submit-btn" %>
      </div>
    </div>
  </div>
<% end %>